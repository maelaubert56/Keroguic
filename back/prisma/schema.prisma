generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String  @id @default(uuid())
  username  String  @unique
  name      String
  password  String
  picture   String?
  privilege String

  posts   Posts[]
  gallery Gallery[]
}

model Posts {
  id       String   @id @default(uuid())
  title    String
  content  String
  date     DateTime
  author   Users    @relation(fields: [authorId], references: [id])
  authorId String
}

model Gallery {
  id       String   @id @default(uuid())
  title    String
  image    String
  date     DateTime
  author   Users    @relation(fields: [authorId], references: [id])
  authorId String
}
